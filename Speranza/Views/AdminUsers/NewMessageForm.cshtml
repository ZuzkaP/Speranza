@model Speranza.Models.AdminUsersModel
<div class="modal fade" id="NewUserMessage" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Nastavenie správy pre klientov</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body myForm">
                <div id="messageBoxInfoForUsersInModal" style="display:none;" class="alert alert-warning" role="alert"></div>
                <div class="container">
                    <div class="row">
                        @*Message  start date*@
                        <div class="form-group col-6">
                            @Html.Label("Zobraziť od:", new {@class = "col-12"})
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text octicon octicon-calendar octicon-newTraining"></span>
                                </div>
                                <input id="MessageDateFrom" type="text" class="form-control col-8 NewMessageFormDatePicker" value="@Model.MessageModel.DateFrom">
                            </div>
                        </div>

                        @*Message  end date*@
                        <div class="form-group col-6">
                            @Html.Label("do:", new {@class = "col-12"})
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text octicon octicon-calendar octicon-newTraining"></span>
                                </div>
                                <input id="MessageDateTo" type="text" class="form-control col-8 NewMessageFormDatePicker" value="@Model.MessageModel.DateTo">
                            </div>
                        </div>

                    </div>
                    <div class="row">


                        @*Message*@
                        <div class="form-group col-11">
                            @Html.Label("Text oznamu:", new {@class = "col-12", @for = "Message"})
                            @Html.TextAreaFor(r => r.MessageModel.Message, new {@class = "form-control col-12", id = "Message", maxlength = "300"})
                        </div>
                        @*</div>*@



                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*SaveButton*@
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zrušiť</button>
                <button id="CreateMessage" type="submit" class="btn btn-primary">Uložiť</button>
            </div>


        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
