@model Speranza.Models.LoginModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayoutNotLoggedIn.cshtml";
}

<div class="container">


    <div class="text-center" style="padding:50px 0">
        <div class="logo">login</div>
        <div class="login-form-1">
            @using (Html.BeginForm("Login", "Accounts", FormMethod.Post, new { @class = "text-left" }))
            {
                if (Model != null)
                {
                    if (!Model.LoginSuccessful)
                    {
                        <div class="login-form-main-message show error success" role="alert">meno alebo heslo nie je správne!</div>
                    }
                }
                <div class="main-login-form">
                    <div class="login-group">
                        <div class="form-group">
                            @Html.Label("Email: ", new { @class = "sr-only" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "email" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Heslo: ", new { @class = "sr-only" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "heslo" })
                        </div>
                        <div class="form-group login-group-checkbox">
                            <input type="checkbox" id="lg_remember" name="lg_remember">
                            <label for="lg_remember">remember</label>
                        </div>

                        </div>
                                <button type="submit" id="btnSubmit" class="login-button" ><i class="glyphicon glyphicon-chevron-right"></i></button>
                    </div>

                    <div class="etc-login-form">
                        <p>@Html.ActionLink("ak si zabudol heslo tak si ho zmeň tu!", "ForgottenPass", "Accounts")</p>
                        <p>@Html.ActionLink("ak ešte nemáš účet tak sa registruj!", "Register", "Accounts")</p>
                    </div>
                    
                    }
                </div>

        </div>



    
</div>
