<!DOCTYPE html>
@{
// Tato cast bude sucastou kazdej stranky}
}
<html>
<head>
    <link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker3.css" rel="stylesheet" />   
    <link href="~/Content/jquery-ui-1.10.0.custom.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.ui.timepicker.css" rel="stylesheet" /> 
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Speranza</a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Kalendár", "Calendar", "Calendar")</li>
                <li>@Html.ActionLink("Môj profil", "UserProfile", "Accounts")</li>
                @if (Session["IsAdmin"] != null && (bool)Session["IsAdmin"])
                {
                    <li>@Html.ActionLink("Správa používateľov", "AdminUsers", "AdminUsers")</li>
                    <li>@Html.ActionLink("Správa tréningov", "AdminTrainings", "AdminTrainings")</li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
            <li> @Html.ActionLink("Prihlásený ako: " +Session["Email"].ToString(), "UserProfile", "Accounts") </li>  
            <li>@Html.ActionLink("Odhlásiť sa", "Logout", "Accounts")</li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/locales/bootstrap-datepicker.sk.min.js"></script>
    <script src="~/Scripts/jquery.ui.widget.min.js"></script>
    <script src="~/Scripts/jquery.ui.tabs.min.js"></script>
    <script src="~/Scripts/jquery.ui.position.min.js"></script>
    <script src="~/Scripts/jquery.ui.core.min.js"></script>
    <script src="~/Scripts/jquery.ui.timepicker.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    @RenderSection("scripts",false);
</body>
</html>
