@using Speranza.Models;
@using Speranza.Views;
@model Speranza.Models.UserProfileModel

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Layout.cshtml";
}

<div class="container">
    <h2>
        Môj profil
    </h2>
    <button id="ChangePass" class="btn btn-danger"><span class="glyphicon glyphicon-lock"></span> Zmeniť heslo</button>

    @using (Html.BeginForm("SaveUserProfile", "Accounts", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Meno: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Surname, "Priezvisko: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, "Tel. číslo: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Category, "Kategória", new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Category, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NumberOfFreeSignUps, "Koľko vstupov mi ešte ostáva: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.NumberOfFreeSignUps, new { @class = "form-control",@readonly = "readonly" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NumberOfPastTrainings, "Koľko som toho už pretrpel/la: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.NumberOfPastTrainings, new { @class = "form-control" , @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <input type="submit" value="Uložiť" id="btnSubmit" class="btn btn-default" />
            </div>
        </div>
    }


    <h3>Moje tréningy</h3>

    @if (Model != null)
    {
        <p> @Html.Raw(ViewHelper.ShowMessageInView(Model.Message, Model.SignedUpOrSignedOffTraining))</p>
    }

    @if (Model.FutureTrainings.Count > 0 || Model.PastTrainings.Count > 0)
    {
        <table class="table table-striped table-hover" >
            <thead>
                <tr>
                    <th class="col-sm-2">Dátum</th>
                    <th class="col-sm-2">Čas</th>
                    <th class="col-sm-4">Popis</th>
                    <th class="col-sm-2">Tréner</th>
                    <th class="col-sm-2">Odhlásiť</th>
                </tr>
            </thead>
            @foreach (var item in Model.FutureTrainings)
                {
                <tr>
                    <td>@item.Time.ToString("dd.MM.yyyy")</td>
                    <td>@item.Time.ToString("HH:mm")</td>
                    <td>@item.Description</td>
                    <td>@item.Trainer</td>
                    <td>
                        @if (item.IsAllowedToSignOff)
                    {
                            @Html.ActionLink("Odhlásiť", "SignOff", "Calendar", new { id = item.ID }, null)
                        }
                    </td>
                </tr>
            }
            @foreach (var item in Model.PastTrainings)
                {
                <tr class="obsolete">
                    <td>@item.Time.ToString("dd.MM.yyyy")</td>
                    <td>@item.Time.ToString("HH:mm")</td>
                    <td>@item.Description</td>
                    <td>@item.Trainer</td>
                    <td><td>
                </tr>
            }
        </table>

    }
</div>

@*Modal for pass reset*@
<div class="modal fade" id="ChangePassModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Zmena hesla</h4>
            </div>
            <div class="modal-body">
                <div id="ModalMessageBoxSuccess" style="display:none;" class="alert alert-success" role="alert"></div>
                <div id="ModalMessageBox" style="display:none;" class="alert alert-danger" role="alert"></div>
                @*Staré heslo*@
                <div class="form-group">
                    @Html.Label("Staré heslo:", new { @class = "control-label col-sm-3", @for = "OldPassTextBox" })
                    <div class="col-sm-6 input-group">
                        @Html.Password("OldPassTextBox", "", new { @class ="form-control", id ="OldPass" })
                    </div>
                </div>

                @*Nové heslo*@
                <div class="form-group">
                    @Html.Label("Nové heslo:", new { @class = "control-label col-sm-3", @for ="NewPass" })
                    <div class="col-sm-6 input-group">
                        @Html.Password("NewPassTextBox", "", new { @class ="form-control", id ="NewPass" })
                    </div>
                </div>

                @*Overenie nového heslo*@
                <div class="form-group">
                    @Html.Label("Nové heslo ešte raz:", new { @class ="control-label col-sm-3", @for ="ConfirmPassTextBox" })
                    <div class="col-sm-6 input-group">
                        @Html.Password("ConfirmPassTextBox", "", new { @class ="form-control", id ="ConfirmPass" })
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="ChangePassButton" type="submit" class="btn btn-primary">Uložiť</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

@section scripts {
<script>

    $('#ChangePass').click(function () {
        $('#OldPass').val('');
        $('#NewPass').val('');
        $('#ConfirmPass').val('');
        $('#ModalMessageBoxSuccess').hide();
        $('#ModalMessageBox').hide();
        $('#ChangePassModal').modal('show');
    });


    $("#ChangePassButton").click(function () {
        var self = $(this);
        var oldPass =  $('#OldPass').prop('value');
        var newPass =  $('#NewPass').prop('value');
        var confirmPass =  $('#ConfirmPass').prop('value');
        $.ajax({
            url: '@Url.Content("~/Accounts/ChangeUserPassword")',
            data: { oldPass:oldPass, newPass:newPass, confirmPass:confirmPass},
            type: 'POST',
            dataType: "json",
            success: function (response) {
                switch (response) {
                    case 0:
                        $('#ModalMessageBoxSuccess').hide();
                        $('#ModalMessageBox').html("Vaše heslo je nesprávne!");
                        $('#ModalMessageBox').show();
                        return;
                    case 1:
                        $('#ModalMessageBoxSuccess').hide();
                        $('#ModalMessageBox').html("Nové heslo nemôže byť prázdne!");
                        $('#ModalMessageBox').show();
                        return;
                    case 2:
                        $('#ModalMessageBoxSuccess').hide();
                        $('#ModalMessageBox').html("Potvrdenie hesla sa nezhoduje!");
                        $('#ModalMessageBox').show();
                        return;
                    case 3:
                        $('#ModalMessageBoxSuccess').hide();
                        $('#ModalMessageBox').html("Nové heslo musí mať aspoň 6 znakov!");
                        $('#ModalMessageBox').show();
                        return;
                    case 4:
                        $('#ModalMessageBoxSuccess').hide();
                        $('#ModalMessageBox').html("Nové heslo musí obsahovať aspoň jedno číslo!");
                        $('#ModalMessageBox').show();
                        return;
                    case 5:
                        $('#ModalMessageBoxSuccess').hide();
                        $('#ModalMessageBox').html("Nové heslo musí obsahovať aspoň jedno písmeno!");
                        $('#ModalMessageBox').show();
                        return;
                    case 6:
                        $('#ModalMessageBoxSuccess').hide();
                        $('#ModalMessageBox').html("Nové heslo a potvrdenie hesla sa nezhodujú!");
                        $('#ModalMessageBox').show();
                        return;
                    default:
                        if (response.Message == 7)
                        {
                            $('#ModalMessageBox').hide();
                            $('#ModalMessageBoxSuccess').html("Vaše heslo bolo úspešne zmenené!");
                            $('#ModalMessageBoxSuccess').show();

                        }
                        return;
                }

                
            }
            });
        });

</script>
}