@model Speranza.Models.AdminTrainingsModel
@{
    ViewBag.Title = "Správa tréningov";
    Layout = "~/Views/Layout.cshtml";
}
<div class="container">
    <h2>Správa tréningov</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Dátum</th>
                <th>Čas</th>
                <th>Popis</th>
                <th>Tréner</th>
                <th>Prihlásení</th>
                <th>Kapacita</th>
                <th>Akcia</th>
            </tr>
        </thead>
        @foreach (var item in Model.Trainings)
        {
            <tr>
                <td>@item.Time.ToString("dd.MM.yyyy")</td>
                <td>@item.Time.ToString("HH:mm")</td>
                <td>@item.Description</td>
                <td>@item.Trainer</td>
                <td>@item.RegisteredNumber</td>
                <td>@item.Capacity</td>
                <td></td>

            </tr>
        }
    </table>
</div>